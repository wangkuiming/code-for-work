<?xml version="1.0" encoding="UTF-8"?>
<redisrouting>	
	<!-- redis节点配置开始 -->
	<clusternode>
		<cnode>
			<id>xeRedis</id>
			<!-- Hash写 HASHWRITE，尾号写 NUMBERWRITE -->
			<writerstrategy>MUTIWRITE</writerstrategy>
			<!-- 负载均衡 策略，最小连接数MINCONNECT、最高性能MAXPERFORMANCE、Hash写 HASHWRITE，尾号写 NUMBERWRITE -->
			<readstrategy>HASHREAD</readstrategy>
			<readservernodes>snode1</readservernodes>
			<writeservernodes>snode1</writeservernodes>
		</cnode>
	</clusternode>
	
	<servernode>
		<node>
			<id>snode1</id>
			<!-- 最大的活动连接 -->
			<maxActive>300</maxActive>
			<!-- 最大的空闲连接 -->
			<maxIdle>100</maxIdle>
			<!-- 最大的等待时间 -->
			<maxWait>1000</maxWait>
			<!--Ip地址和端口 -->
			<host>192.168.26.138</host>
			<port>6379</port>
		</node>
		<node>
			<id>snode2</id>
			<!-- 最大的活动连接 -->
			<maxActive>300</maxActive>
			<!-- 最大的空闲连接 -->
			<maxIdle>100</maxIdle>
			<!-- 最大的等待时间 -->
			<maxWait>1000</maxWait>
			<!--Ip地址和端口 -->
			<host>192.168.26.138</host>
			<port>6379</port>
		</node>
	</servernode>
	<!-- redis节点 配置结束 -->
</redisrouting>
